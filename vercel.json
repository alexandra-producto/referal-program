{
  "buildCommand": "next build",
  "devCommand": "npm run next:dev",
  "installCommand": "npm install",
  "framework": "nextjs",
  "regions": ["iad1"],
  "env": {
    "NODE_ENV": "production"
  },
  "rewrites": [
    {
      "source": "/api/jobs/:id",
      "destination": "/api/jobs/[id]"
    },
    {
      "source": "/api/jobs/:id/recommendations",
      "destination": "/api/jobs/[id]/recommendations"
    }
  ]
}

